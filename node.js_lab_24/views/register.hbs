<form action="/register" method="post">
    <div>
        <label>Username:</label>
        <input type="text" name="username"/>
    </div>
    <div>
        <label>Email:</label>
        <input type="text" name="email"/>
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="password"/>
    </div>
    <div>
        <label>Role:</label>
        <label>
            <p>
                <input type="radio" id="user" class="with-gap" name="role" value="user" checked>
                <span>User</span>
                <br>
            </p>
        </label>
        <label>
            <p>
                <input type="radio" id="admin" class="with-gap" name="role" value="admin">
                <span>Admin</span>
                <br>
            </p>
        </label>
    </div>
    <div>
        <input type="submit" value="Register"/>
    </div>
</form>
