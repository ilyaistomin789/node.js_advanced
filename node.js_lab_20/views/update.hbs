<script>
    function disableDelete() {
        const del = document.getElementById('delete_button');
        if (del) del.disabled = true;
    }
</script>
<div class="row">
    <form id="update_form" method="post" action="/update">
        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                <input id="icon_prefix" type="text" class="validate" name="name" oninput="disableDelete()" value="{{item.name}}">
                <label for="icon_prefix">Name</label>
            </div>
            <div class="input-field col s6">
                <i class="material-icons prefix">phone</i>
                <input id="icon_telephone" type="tel" class="validate" name="telephone" oninput="disableDelete()" value="{{item.telephone}}">
                <label for="icon_telephone">Telephone</label>
            </div>
            {{> buttons}}
        </div>
    </form>
</div>
